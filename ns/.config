---
poros:
  path: $ROOT/poros/path
  argv: $ROOT/poros/argv
  auth: $ROOT/poros/auth
  conf: $ROOT/poros/conf
  lib: $ROOT/poros/lib
  port: 12345

vssh:
  hostdb: /tmp/hostdb
  
hermes:
  root: $ROOT/hermes/data
  cache: $ROOT/hermes/cache
  bin: $ROOT/hermes/bin
 
range:
  cache: $ROOT/hermes/cache/current
  callback: $ROOT/hermes/callback

ns:
  stat: $ROOT/../cache/ns/stat

deploy:
  bin: $ROOT/deploy/bin
  lib: $ROOT/deploy/lib
  logs: $ROOT/../logs/deploy
  conf: $ROOT/deploy/conf
  code: $ROOT/deploy/code
  ctrl: $ROOT/deploy/ctrl
  lock: $ROOT/../lock/deploy
  mould: $ROOT/deploy/mould
  cache: $ROOT/../cache/deploy/run
  alarm: $ROOT/../cache/deploy/alarm
  notify: [ '@lijinfeng' ]

