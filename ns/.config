---
poros:
  path: $ROOT/poros/path
  argv: $ROOT/poros/argv
  auth: $ROOT/poros/auth
  conf: $ROOT/poros/conf
  lib: $ROOT/poros/lib
  port: 12345

vssh:
  hostdb: /tmp/hostdb
  
hermes:
  root: $ROOT/hermes/data
  cache: $ROOT/hermes/cache
  bin: $ROOT/hermes/bin
 
range:
  cache: $ROOT/hermes/cache/current
  callback: $ROOT/hermes/callback

ns:
  stat: $ROOT/../cache/ns/stat

daemon:
  path: $ROOT/daemon/path

collector:
  data: $ROOT/../data/collector
  logs: $ROOT/../logs/collector
  code: $ROOT/collector/code
  conf: $ROOT/collector/conf
  call: $ROOT/collector/call
  exec: $ROOT/collector/exec
  
ntpsync:
  conf: $ROOT/util/conf/ntpsync # all ntp service servers address
