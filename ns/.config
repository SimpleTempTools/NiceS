---
poros:
  path: $ROOT/poros/path
  argv: $ROOT/poros/argv
  auth: $ROOT/poros/auth
  conf: $ROOT/poros/conf
  lib: $ROOT/poros/lib
  port: 12345

vssh:
  hostdb: /tmp/hostdb
  
hermes:
  root: $ROOT/hermes/data
  cache: $ROOT/hermes/cache
  bin: $ROOT/hermes/bin
 
range:
  cache: $ROOT/hermes/cache/current
  callback: $ROOT/hermes/callback

ns:
  stat: $ROOT/../cache/ns/stat

deploy:
  bin: $ROOT/deploy/bin
  lib: $ROOT/deploy/lib
  logs: $ROOT/../logs/deploy
  conf: $ROOT/deploy/conf
  code: $ROOT/deploy/code
  ctrl: $ROOT/deploy/ctrl
  lock: $ROOT/../lock/deploy
  mould: $ROOT/deploy/mould
  cache: $ROOT/../cache/deploy/run
  alarm: $ROOT/../cache/deploy/alarm
  notify: [ '@lijinfeng' ]

deployx:
  bin: $ROOT/deployx/bin
  lib: $ROOT/deployx/lib
  logs: $ROOT/../logs/deployx
  code: $ROOT/deployx/code
  conn: $ROOT/deployx/conn

daemon:
  path: $ROOT/daemon/path

collector:
  data: $ROOT/../data/collector
  logs: $ROOT/../logs/collector
  code: $ROOT/collector/code
  conf: $ROOT/collector/conf
  call: $ROOT/collector/call
  exec: $ROOT/collector/exec
  
ntpsync:
  conf: $ROOT/util/conf/ntpsync # all ntp service servers address

openapi:
  addr: http://ns.q.net

bone:
  conf: $ROOT/bone/conf

util:
  lib: $ROOT/util/lib
  conf: $ROOT/util/conf

